<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    android:id="@+id/frag_weather_3days"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_gray"
    tools:context=".screen.home.NextDayWeatherFragment">
    <TextView
        android:id="@+id/text_line2"
        android:layout_width="0dp"
        android:layout_height="@dimen/layout_heigh_1dp"
        android:layout_marginStart="@dimen/margin_24dp"
        android:layout_marginLeft="@dimen/margin_24dp"
        android:layout_marginTop="@dimen/margin_24dp"
        android:layout_marginEnd="@dimen/margin_24dp"
        android:layout_marginRight="@dimen/margin_24dp"
        android:background="@color/color_white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_tomorrow_weather" />

    <TextView
        android:id="@+id/text_line1"
        android:layout_width="0dp"
        android:layout_height="@dimen/layout_heigh_1dp"
        android:layout_marginStart="@dimen/margin_24dp"
        android:layout_marginLeft="@dimen/margin_24dp"
        android:layout_marginTop="@dimen/margin_24dp"
        android:layout_marginEnd="@dimen/margin_24dp"
        android:layout_marginRight="@dimen/margin_24dp"
        android:background="@color/color_white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_today_date" />

    <TextView
        android:id="@+id/text_line3"
        android:layout_width="0dp"
        android:layout_height="@dimen/layout_heigh_1dp"
        android:layout_marginTop="@dimen/margin_24dp"
        android:background="@color/color_white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_next_tomorrow_weather" />

    <TextView
        android:id="@+id/text_today_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_24dp"
        android:layout_marginLeft="@dimen/margin_24dp"
        android:layout_marginTop="@dimen/margin_24dp"
        android:text="@string/test_mon_rainy"
        android:textColor="@color/color_white"
        android:textSize="@dimen/text_size_18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_tomorrow_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_24dp"
        android:layout_marginLeft="@dimen/margin_24dp"
        android:layout_marginTop="@dimen/margin_24dp"
        android:text="@string/test_tomorrow_rainy"
        android:textColor="@color/color_white"
        android:textSize="@dimen/text_size_18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_line1" />

    <TextView
        android:id="@+id/text_next_tomorrow_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_24dp"
        android:layout_marginLeft="@dimen/margin_24dp"
        android:layout_marginTop="@dimen/margin_24dp"
        android:text="@string/test_wed_thunder_storm"
        android:textColor="@color/color_white"
        android:textSize="@dimen/text_size_18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_line2" />

    <ImageView
        android:id="@+id/image_tomorrow_weather"
        android:layout_width="@dimen/margin_24dp"
        android:layout_height="@dimen/margin_24dp"
        android:layout_marginTop="@dimen/margin_24dp"
        android:layout_marginEnd="@dimen/margin_16dp"
        android:layout_marginRight="@dimen/margin_16dp"
        android:src="@drawable/ic_rain"
        app:layout_constraintEnd_toStartOf="@+id/text_tomorrow_temprature"
        app:layout_constraintTop_toBottomOf="@+id/text_line1" />

    <ImageView
        android:id="@+id/image_next_tomorrow_weather"
        android:layout_width="@dimen/margin_24dp"
        android:layout_height="@dimen/margin_24dp"
        android:layout_marginTop="@dimen/margin_24dp"
        android:layout_marginEnd="@dimen/margin_16dp"
        android:layout_marginRight="@dimen/margin_16dp"
        android:src="@drawable/ic_storm"
        app:layout_constraintEnd_toStartOf="@+id/text_next_tomorrow-temprature"
        app:layout_constraintTop_toBottomOf="@+id/text_line2" />

    <ImageView
        android:id="@+id/image_today_weather"
        android:layout_width="@dimen/margin_24dp"
        android:layout_height="@dimen/margin_24dp"
        android:layout_marginTop="@dimen/margin_24dp"
        android:layout_marginEnd="@dimen/margin_16dp"
        android:layout_marginRight="@dimen/margin_16dp"
        android:src="@drawable/ic_rain"
        app:layout_constraintEnd_toStartOf="@+id/text_tomorrow_temprature"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_tomorrow_temprature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_24dp"
        android:layout_marginEnd="@dimen/margin_24dp"
        android:layout_marginRight="@dimen/margin_24dp"
        android:text="@string/test_text_temprature"
        android:textColor="@color/color_white"
        android:textSize="@dimen/text_size_18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_line1" />

    <TextView
        android:id="@+id/text_next_tomorrow-temprature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_24dp"
        android:layout_marginEnd="@dimen/margin_24dp"
        android:layout_marginRight="@dimen/margin_24dp"
        android:text="@string/test_text_temprature"
        android:textColor="@color/color_white"
        android:textSize="@dimen/text_size_18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_line2" />

    <TextView
        android:id="@+id/text_today_temprature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_24dp"
        android:layout_marginEnd="@dimen/margin_24dp"
        android:layout_marginRight="@dimen/margin_24dp"
        android:text="@string/test_text_temprature"
        android:textColor="@color/color_white"
        android:textSize="@dimen/text_size_18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_forecast_5days"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_16dp"
        android:layout_marginLeft="@dimen/margin_16dp"
        android:layout_marginTop="@dimen/margin_16dp"
        android:layout_marginEnd="@dimen/margin_16dp"
        android:layout_marginRight="@dimen/margin_16dp"
        android:layout_marginBottom="@dimen/margin_16dp"
        android:text="@string/_5_days_forecast"
        android:textColor="@color/color_white"
        android:textSize="@dimen/text_size_18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_line3" />
</android.support.constraint.ConstraintLayout>
